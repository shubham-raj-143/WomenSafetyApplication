<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".NearByPlaces">
    <include
        android:id="@+id/toolbar_student"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="10dp">
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:id="@+id/hospital"
            android:layout_marginRight="20dp"
            android:background="#00982323"
            android:src="@drawable/ic_baseline_local_hospital_24"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_marginRight="20dp"
            android:id="@+id/atm"
            android:background="#00982323"
            android:src="@drawable/ic_baseline_local_atm_24"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_marginRight="20dp"
            android:id="@+id/res"
            android:background="#00982323"
            android:src="@drawable/ic_baseline_restaurant_24"/>
        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:id="@+id/police"
            android:background="#00982323"
            android:src="@drawable/ic_baseline_local_police_24"/>
    </LinearLayout>


<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_below="@+id/linearLayout"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

</RelativeLayout>