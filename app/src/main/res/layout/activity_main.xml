<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context=".MainActivity">
    <include
        android:id="@+id/toolbar_student"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"

        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >
        <ImageButton
            android:id="@+id/emergencyContactBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:padding="20dp"
            android:layout_weight="0.8"
            android:background="#00FFFFFF"
            android:layout_marginRight="5dp"
            android:src="@drawable/alert"
            android:text="Add Emergency Contacts"
            android:scaleType="fitCenter"

            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

        <ImageButton
            android:id="@+id/map"
            android:layout_weight="0.8"
            android:padding="15dp"
            android:layout_width="150dp"
            android:background="#00FFFFFF"
            android:src="@drawable/location"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:text="Helping Map"
            />
        </androidx.cardview.widget.CardView>
    </LinearLayout>




<!--    Recording-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Start Recording"
        android:layout_weight="0.8"
        android:padding="20dp"
        android:src="@drawable/ic_start_recording"
        android:id="@+id/activity_main_record"
        app:tint="@color/red_300"
        android:background="#00FFFFFF"
        />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Stop Recording"
        android:visibility="gone"
        android:layout_weight="0.8"
        app:tint="@color/red_300"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_stop_recording"
        android:id="@+id/activity_main_stop"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Play Recording"
        android:visibility="gone"

        app:tint="@color/red_300"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_play_audio"
        android:id="@+id/activity_main_play"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Stop Playing"
        android:visibility="gone"
        android:layout_weight="0.8"
        app:tint="@color/red_300"
        android:background="#00FFFFFF"
        android:src="@drawable/ic_pause_audio"
        android:id="@+id/activity_main_stop_playing"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >


        <ImageButton
            android:id="@+id/fakeCall"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="0.8"
            android:padding="20dp"
            android:background="#00FFFFFF"
            android:text="Stop Playing"
            android:src="@drawable/call6"
            android:scaleType="fitCenter"
             />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

<!--    Information -->


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

        <ImageButton
            android:id="@+id/contact_list"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="0.8"
            android:src="@drawable/list"
            android:padding="20dp"
            android:background="#00FFFFFF"
            android:text="AI CHATS"
            android:scaleType="centerCrop"

            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            >

            <ImageButton
                android:id="@+id/rightInfo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.8"
                android:background="#00FFFFFF"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/law"
                android:text="WOMAN RIGHTS INFO" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>